@model RetreatSchedule.Models.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/assets/css/switch.css" rel="stylesheet" />

<div id="content" class="content">

    <ol class="breadcrumb pull-right">
        <li class="breadcrumb-item"><a>Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Users</a></li>
    </ol>

    <h1 class="page-header">Edit User <small>  </small></h1>

    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AspId" class="control-label"></label>
                    <input asp-for="AspId" class="form-control" readonly />
                    <span asp-validation-for="AspId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MiddleName" class="control-label"></label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" type="tel" maxlength="11" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AgeRange" class="control-label"></label>
                    <select asp-for="AgeRange" class="form-control">
                        <option value=""> --- </option>
                        <option value="50-90">50 - 90</option>
                        <option value="30-49">30 - 49</option>
                        <option value="24-29">20 - 29</option>
                    </select>
                    <span asp-validation-for="AgeRange" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsViewOnly" class="control-label"></label>
                    <div class="checkbox">
                        <label class="switch">
                            <input asp-for="IsViewOnly" type="checkbox" value="true" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MemberType" class="control-label"></label>
                    <select class="form-control" asp-for="MemberType" asp-items="ViewBag.MemberType">
                        <option value=""> -- Select Member Type -- </option>
                    </select>
                    <span asp-validation-for="MemberType" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <a class="btn btn-default" asp-action="Index">Back to list</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
