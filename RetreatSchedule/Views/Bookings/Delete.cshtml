@model RetreatSchedule.Models.Booking
@using RetreatSchedule.Models.Enum

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="content" class="content">

    <ol class="breadcrumb pull-right">
        <li class="breadcrumb-item"><a>Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Bookings</a></li>
    </ol>

    <h1 class="page-header"> Are you sure you want to delete this booking? </h1>

    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-2">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.User.FirstName)
                    @Html.DisplayFor(model => model.User.MiddleName)
                    @Html.DisplayFor(model => model.User.LastName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Activity)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Activity.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PaymentStatus)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PaymentType)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PaymentType)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-default">Back to List</a>
                <input type="submit" value="Delete" class="btn btn-danger" @( Model.PaymentStatus == PaymentStatus.Successful ? "disabled" : "") />
            </form>
        </div>
    </div>
</div>